{
  "name": "@nest-zero-to-hero/backend",
  "private": true,
  "packageManager": "pnpm@9.5.0",
  "license": "MIT",
  "author": "i7eo",
  "scripts": {
    "type-check": "nest start -b swc --type-check",
    "build": "pnpm type-check && nest build -b swc",
    "dev": "pnpm start",
    "dev:debug": "pnpm start:debug",
    "repl": "pnpm start --entryFile repl",
    "start": "NODE_ENV=development nest start -b swc -w",
    "start:debug": "NODE_ENV=development nest start -b swc -w --debug",
    "start:prod": "NODE_ENV=production node dist/main",
    "prod": "NODE_ENV=production pm2-runtime start ecosystem.config.js",
    "prod:pm2": "NODE_ENV=production pm2 restart ecosystem.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:debug": "NODE_ENV=production nest start -b swc -w --debug",
    "test": "dotenv -e ../../.env.test vitest",
    "format": "prettier \"./**/*.{js,ts,jsx,tsx,md,json,jsonc}\" --write",
    "lint": "TIMING=1 eslint \"./**/*.{js,jsx,ts,tsx,md,json,jsonc}\" --fix",
    "clean": "run-p \"clean:**\"",
    "clean:cache": "rimraf .turbo && rimraf dist",
    "clean:deps": "rimraf node_modules"
  },
  "dependencies": {
    "@casl/ability": "^6.7.1",
    "@casl/prisma": "^1.4.1",
    "@fastify/cookie": "^9.4.0",
    "@fastify/multipart": "^8.3.0",
    "@fastify/static": "^7.0.4",
    "@nest-zero-to-hero/metas": "workspace:*",
    "@nest-zero-to-hero/utils": "workspace:*",
    "@nestjs/axios": "^3.0.3",
    "@nestjs/common": "^10.4.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.1",
    "@nestjs/platform-fastify": "^10.4.1",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/terminus": "^10.2.3",
    "axios": "^1.7.4",
    "dayjs": "^1.11.13",
    "dotenv": "16.4.5",
    "dotenv-expand": "^11.0.6",
    "fastify": "^4.28.1",
    "nestjs-prisma": "^0.23.0",
    "nestjs-zod": "^3.0.0",
    "prisma-extension-pagination": "^0.7.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.4",
    "@nestjs/devtools-integration": "^0.1.6",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.1",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.8",
    "@types/node": "^22.5.0",
    "@vitest/ui": "^2.0.5",
    "dotenv-cli": "^7.4.2",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "unplugin-swc": "^1.5.1",
    "vitest": "^2.0.5",
    "zx-cjs": "7.0.7-0"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
