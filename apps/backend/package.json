{
  "name": "@nest-zero-to-hero/backend",
  "private": true,
  "packageManager": "pnpm@9.5.0",
  "license": "MIT",
  "author": "i7eo",
  "scripts": {
    "build": "nest build --webpack",
    "dev": "pnpm start",
    "dev:debug": "pnpm start:debug",
    "repl": "pnpm start --entryFile repl",
    "start": "NODE_ENV=development nest start --watch --path tsconfig.json",
    "start:debug": "NODE_ENV=development nest start --watch --debug --path tsconfig.json",
    "start:prod": "NODE_ENV=production node dist/main",
    "prod": "NODE_ENV=production pm2-runtime start ecosystem.config.js",
    "prod:pm2": "NODE_ENV=production pm2 restart ecosystem.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:debug": "NODE_ENV=production nest start --debug --watch",
    "test": "dotenv -e ../../.env.test vitest",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "clean": "run-p \"clean:**\"",
    "clean:cache": "rimraf .turbo && rimraf dist",
    "clean:deps": "rimraf node_modules"
  },
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/multipart": "^8.3.0",
    "@fastify/static": "^7.0.4",
    "@nestjs/common": "^10.4.1",
    "@nestjs/core": "^10.4.1",
    "@nestjs/platform-fastify": "^10.4.1",
    "@nestjs/swagger": "^7.4.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "fastify": "^4.28.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.4",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.1",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.8",
    "@types/express": "^4.17.17",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "vite": "^5.4.2",
    "vite-tsconfig-paths": "^5.0.1",
    "unplugin-swc": "^1.5.1",
    "zx-cjs": "7.0.7-0"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
