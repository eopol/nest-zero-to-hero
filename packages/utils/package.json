{
  "name": "@nest-zero-to-hero/utils",
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@9.5.0",
  "license": "MIT",
  "author": "i7eo",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "publishConfig": {
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "require": "./dist/index.cjs",
        "import": "./dist/index.js"
      },
      "./*": [
        "./*",
        "./*.d.ts"
      ]
    },
    "typesVersions": {
      "*": {
        "*": [
          "./dist/*",
          "./*"
        ]
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "DEV=true pnpm build",
    "test": "vitest",
    "lint": "run-s \"lint:**\"",
    "lint:eslint": "TIMING=1 eslint \"*.{js,jsx,ts,tsx,md,json,jsonc}\" --fix",
    "lint:prettier": "prettier --write \"*.{js,ts,jsx,tsx,md,json,jsonc}\"",
    "clean": "run-p \"clean:**\"",
    "clean:cache": "rimraf .turbo && rimraf dist",
    "clean:deps": "rimraf node_modules"
  },
  "dependencies": {
    "es-toolkit": "^1.16.0",
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "tsup": "^8.2.4"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
