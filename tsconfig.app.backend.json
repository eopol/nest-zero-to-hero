{
  "extends": ["./tsconfig.paths.json"],
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true
  },
  "include": [
    "./apps/backend/**/*",
    "./apps/backend/**/*.json",
    "./apps/backend/**/typings/**/*",
    "./apps/backend/**/*.md"
  ],
  "exclude": ["**/__tests__/**", "**/tests/**", "node_modules", "**/dist"]
}
