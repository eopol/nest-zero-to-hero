{
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },

    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "build:backend": {
      "outputs": ["dist/**"],
      "dependsOn": ["build"]
    },
    "build:frontend": {
      "outputs": ["dist/**"],
      "dependsOn": ["build"]
    },

    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },

    "clean": {
      "cache": false
    },

    "format": {
      "cache": false,
      "outputs": []
    },

    "lint": {
      "cache": false,
      "outputs": []
    },

    "release": {
      "cache": false
    }
  }
}
