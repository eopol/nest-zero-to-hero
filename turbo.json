{
  "tasks": {
    "dev": {
      "cache": false
    },

    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "build:backend": {
      "outputs": ["dist/**"],
      "dependsOn": ["build"]
    },
    "build:frontend": {
      "outputs": ["dist/**"],
      "dependsOn": ["build"]
    },

    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },

    "clean": {
      "cache": false
    },
    "clean:cache": {
      "cache": false
    },

    "lint": {
      "cache": false,
      "outputs": []
    },
    "lint:eslint": {
      "cache": false,
      "outputs": []
    },
    "lint:prettier": {
      "cache": false,
      "outputs": []
    },

    "release": {
      "cache": false
    }
  }
}
